<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/imagefon2"
    tools:context=".vue.HomeActivity"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">


    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="306dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="89dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:src="@mipmap/bluetootth"></ImageView>

        <TextView
            android:id="@+id/quiz"
            android:layout_marginTop="30dp"
            android:layout_width="332dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="Quiz Interactive"
            android:textColor="@color/black"
            android:textSize="@android:dimen/app_icon_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="425dp"
        android:background="@mipmap/imagefon2"
        android:orientation="vertical">
        <Button
            android:id="@+id/button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Start"
            android:layout_gravity="center"
            android:background="@drawable/button_start"
            android:onClick="start"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="  Customer app developed by Mohammed BOUAJAJA and Nadia Zeroual as part of module validation in mobile programming, which is intended for students"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="italic" />
    </LinearLayout>



</LinearLayout>